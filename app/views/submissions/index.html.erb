<div class="container">

  <div class="audition_counter">
    <ul>
      <li class="activegen allgen">All Submissions<span><%= @actors.count %></span></li>
      <li class="female">Female<span><%= @actors.where(gender: "Female").count %></span></li>
      <li class="male">Male<span><%= @actors.where(gender: "Male").count %></span></li>
    </ul>
    <ul class="eqsearch">
      <li class="activeeq alleq">All<span><%= @actors.count %></span></li>
      <li class="equity">Equity<span><%= @actors.where(equity: "Equity").count %></span></li>
      <li class="emc">EMC<span><%= @actors.where(equity: "EMC").count %></span></span></li>
      <li class="nonequity">Non-Equity<span><%= @actors.where(equity: "Non-Equity").count %></span></span></li>
    </ul>
  </div>

  <div class="submission_list">
    <h1>Submitted Actors for <%= @audition.name %></h1>


    <% @actors.each do |actor| %>
      <div class="oneactor <%= actor.gender %> <%= actor.equity %>">
        <%= image_tag actor.headshot %>
        <div class="actorstats">
          <h2><%= actor.first_name %> <%= actor.last_name %></h2>
          <% if actor.equity == "Equity" %>
            <p class="actoreq"><i class="fa fa-star"></i> <%= actor.equity %></p>
          <% elsif actor.equity == "EMC" %>
            <p class="actoreq"><i class="fa fa-star-half-o"></i> <%= actor.equity %></p>
          <% else %>
            <p class="actoreq"><i class="fa fa-star-o"></i> <%= actor.equity %></p>
          <% end %>
          <br />
          <table>
            <tr>
              <td class="key">Height:</td>
              <td class="value"><%= actor.height %></td>
            </tr>
            <tr>
              <td class="key">Weight:</td>
              <td class="value"><%= actor.weight %> lbs</td>
            </tr>
            <tr>
              <td class="key">Hair:</td>
              <td class="value"><%= actor.hair %></td>
            </tr>
            <tr>
              <td class="key">Eyes:</td>
              <td class="value"><%= actor.eyes %></td>
            </tr>
          </table>
        </div>
      </div>
    <% end %>
  </div>
